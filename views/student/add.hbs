<form action="/student/add" method="post">
    <h1 class="text-danger text-uppercase text-center">Add new student</h1>
    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name" id="" required minlength="3" maxlength="30">
    </div>
    <div class="form-group">
        <label for="birthday">Birthday</label>
        <input class="form-control" type="date" name="dob" id="">
    </div>
    <div class="form-group">
        <label for="gpa">GPA</label>
        <input class="form-control" type="number" name="gpa" id="" min="0" max="10">
    </div>
    <div class="form-group">
        <label for="gender">Gender</label>
        <br>
        <input type="radio" name="gender" id="" value="male">Male
        <input type="radio" name="gender" id="" value=" female">Female
    </div>
    <div class="form-group">
        <label for="image">Image</label>
        <input class="form-control" type="url" name="image" id="" required>
    </div>
    <div class="form-group mt-3 text-center">
        <input class="btn btn-primary" type="submit" value="Add">
        <input class="btn btn-success" type="reset" value="Clear">
    </div>
</form>